[Unit]
Description=MacBook Pro lid suspend
Before=sleep.target
StopWhenUnneeded=yes

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/sh -c "/usr/bin/echo XHC1 > /proc/acpi/wakeup"

[Install]
WantedBy=sleep.target
