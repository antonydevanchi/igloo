<application>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="20" />
    <option name="FONT_FAMILY" value="Source Code Pro" />
    <option name="SECONDARY_FONT_FAMILY" value="Hack" />
  </component>
  <component name="EditorSettings">
    <option name="USE_SOFT_WRAPS" value="" />
    <option name="IS_ENSURE_NEWLINE_AT_EOF" value="true" />
    <option name="SHOW_BREADCRUMBS" value="false" />
    <!-- Allow scrolling past end (virtual space) -->
    <option name="ADDITIONAL_PAGE_AT_BOTTOM" value="true" />
    <option name="SHOW_NOTIFICATION_AFTER_REFORMAT_CODE_ACTION" value="false" />
    <option name="SHOW_PARAMETER_NAME_HINTS" value="false" />
  </component>
  <component name="JSEditorOptions">
    <option name="START_STRING_INTERPOLATION_ON_TYPING" value="true" />
  </component>
  <component name="TodoConfiguration">
    <pattern icon="question" case-sensitive="true" pattern="\bCHECK\b.*" />
    <pattern case-sensitive="true" pattern="\bREFACTOR\b.*" />
    <pattern case-sensitive="true" pattern="\bTODO\b.*" />
    <pattern case-sensitive="true" pattern="\bDOCUMENT\b.*" />
    <pattern icon="important" case-sensitive="true" pattern="\bFIX\b.*" />
    <pattern icon="important" case-sensitive="true" pattern="\bCRITFIX\b.*" />
    <pattern case-sensitive="true" pattern="\bPROCESSING\b.*" />
    <pattern case-sensitive="true" pattern="\bARCHIVE\b.*" />
    <pattern case-sensitive="true" pattern="\bPLANNING\b.*" />
  </component>
  <component name="XmlEditorOptions">
    <option name="showCssInlineColorPreview" value="true" />
    <option name="tagTreeHighlightingLevelCount" value="10" />
  </component>
</application>
