[
  {
    "clean": ["~", "~/.task"]
  },
  {
    "link": {
      "~/.taskrc": {
        "force": true,
        "hosts": {
          "iceowl": "taskrc",
          "igloo": "taskrc"
        }
      },
      "~/.taskopenrc": {
        "force": true,
        "hosts": {
          "iceowl": "taskopenrc",
          "igloo": "taskopenrc"
        }
      },
      "~/.task/nord.theme": {
        "create": true,
        "force": true,
        "hosts": {
          "iceowl": "nord.theme",
          "igloo": "nord.theme"
        }
      },
      "~/.task/hooks": {
        "create": true,
        "force": true,
        "path": "hooks"
      },
      "~/.task/scripts": {
        "create": true,
        "force": true,
        "path": "scripts"
      }
    }
  }
]
